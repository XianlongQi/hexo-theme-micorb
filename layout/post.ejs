<article class="post" id="post">
  <header class="post-header text-center">
    <h1 class="title">
      <%=page.title%>
    </h1>
    <%=date(page.date)%>
      <hr>
  </header>
  <div class="post-content">
    <%-page.content%>
  </div>
  <div class="post-tags">
        <%- list_tags(page.tags, {
            show_count: false,
            class: 'article-tag'
          }) %>
  </div>
</article>